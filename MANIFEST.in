# 包含额外文件到分发包中

# 文档文件
include docs_unified/README.md
include docs_unified/CHANGELOG.md
include docs_unified/CODE_ORGANIZATION_REPORT.md
include LICENSE
include requirements.txt

# 配置文件
include config/requirements.txt
include pyproject.toml
include .pre-commit-config.yaml

# 文档与图片
recursive-include docs_unified *.md
recursive-include images *.svg *.png

# 测试与工具
recursive-include tests *.py
recursive-include tools *.py
# 工具说明文档已迁移至 docs_unified/tools_README.md

# 源代码
recursive-include src *.py

# 排除不需要的文件
exclude .gitignore
exclude *.bat
exclude *.py[co]
exclude acli.md

# 排除临时文件
global-exclude tmp_*
global-exclude temp_*
global-exclude *.tmp
global-exclude *.temp
global-exclude __pycache__
global-exclude *.pyc
global-exclude *.pyo
global-exclude .DS_Store
global-exclude Thumbs.db
